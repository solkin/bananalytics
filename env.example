# Production environment variables
# Copy to .env and fill in values

# Database
POSTGRES_DB=bananalytics
POSTGRES_USER=bananalytics
POSTGRES_PASSWORD=change_me_in_production

# S3 Storage (MinIO)
S3_ACCESS_KEY=change_me_in_production
S3_SECRET_KEY=change_me_in_production
S3_BUCKET=bananalytics

# API URL for frontend (use /api if behind reverse proxy, or full URL)
API_URL=/api

# Registration (set to true to allow new user registration)
REGISTRATION_ENABLED=false

# SMTP for email invitations (optional, but required for sending invitation emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Bananalytics

# Base URL for invitation links (your public URL)
BASE_URL=https://your-domain.com
