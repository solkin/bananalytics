# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

ARG VITE_API_URL=/api

# Only copy package.json, skip package-lock.json to avoid platform-specific rollup issues
COPY package.json ./
RUN npm install

COPY . .
RUN npm run build

# Production stage
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
